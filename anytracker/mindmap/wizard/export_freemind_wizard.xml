<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_export_freemind_form" model="ir.ui.view">
            <field name="name">export freemind wizard form</field>
            <field name="model">export.freemind.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="export freemind map">
                    <field name="mindmap_file" select="1" string="File mindmap to write" />
                    <separator string="" colspan="4" />
                    <field name="ticket_id" string="Parent ticket"/>
                    <separator string="" colspan="4" />
                    <field name="green_complexity" string="complexity level for green flag"/>
                    <field name="orange_complexity" string="complexity level for orange flag"/>
                    <field name="red_complexity" string="complexity level for red flag"/>
                	<separator string="" colspan="4" />
                    <group colspan="4" col="6">
                        <label string ="" colspan="2"/>
                        <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                        <button icon="terp-gtk-go-back-rtl" string="export file" name="execute_export" type="object"/>
                    </group>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_export_freemind_view">
            <field name="name">export freemind map</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">export.freemind.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_export_freemind_wizard"
            parent="tickets"
            sequence="40"
            action="action_export_freemind_view"/>

    </data>
</openerp>
