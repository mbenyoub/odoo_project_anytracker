<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- VIEWS -->
<record id="view_stage_tree_with_progress" model="ir.ui.view">
    <field name="name">Project stages</field>
    <field name="model">anytracker.stage</field>
    <field name="inherit_id" ref="view_stage_tree" />
    <field name="arch" type="xml">
        <xpath expr="/tree/field[@name='state']" position="after">
            <field name="progress" string="Progress"/>
        </xpath>
    </field>
</record>

<record id="view_stage_form_with_progress" model="ir.ui.view">
    <field name="name">Stage</field>
    <field name="model">anytracker.stage</field>
    <field name="inherit_id" ref="view_stage_form" />
    <field name="arch" type="xml">
        <xpath expr="/form/field[@name='state']" position="after">
            <field name="progress" string="Progress"/>
        </xpath>
    </field>
</record>

<record id="view_stage_ticket_with_progress" model="ir.ui.view">
    <field name="name">Ticket</field>
    <field name="model">anytracker.ticket</field>
    <field name="inherit_id" ref="ticket_view_form" />
    <field name="arch" type="xml">
        <xpath expr="/form//field[@name='stage_id']" position="after">
            <field name="progress" string="Progress" widget="progressbar"/>
        </xpath>
    </field>
</record>

<record id="ticket_view_tree_with_progress" model="ir.ui.view">
    <field name="name">Ticket</field>
    <field name="model">anytracker.ticket</field>
    <field name="inherit_id" ref="ticket_view_tree" />
    <field name="arch" type="xml">
        <xpath expr="/tree/field[@name='my_rating']" position="after">
            <field name="progress" string="Progress" widget="progressbar"/>
        </xpath>
    </field>
</record>

<record id="tickets_hierarchy_with_progress" model="ir.ui.view">
    <field name="name">anytracker.ticket.hierarchy</field>
    <field name="model">anytracker.ticket</field>
    <field name="inherit_id" ref="tickets_hierarchy" />
    <field name="arch" type="xml">
        <xpath expr="/tree/field[@name='stage_id']" position="after">
            <field name="progress" string="Progress" widget="progressbar"/>
        </xpath>
    </field>
</record>

</data>
</openerp>

