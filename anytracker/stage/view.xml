<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

<!-- STAGE -->
<record id="view_stage_tree" model="ir.ui.view">
    <field name="name">Project stages</field>
    <field name="model">anytracker.stage</field>
    <field name="type">tree</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <tree string="Ticket stages">
        <field name="name"/>
        <field name="state"/>
        <field name="progress" string="Progress"/>
        <field name="method_id"/>
        <field name="sequence"/>
        <field name="force_rating"/>
        <field name="is_ratable" string="Rating"/>
    </tree>
    </field>
</record>

<record id="view_stage_search" model="ir.ui.view">
    <field name="name">anytracker.stage.search</field>
    <field name="model">anytracker.stage</field>
    <field name="type">search</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <search string="Search stages">
        <filter name="stages_by_method"
            string="By method"
            context="{'group_by': 'method_id'}"
            icon="gtk-indent"
            help="Group by method"/>
    </search>
    </field>
</record>

<record id="view_stage_form" model="ir.ui.view">
    <field name="name">Stage</field>
    <field name="model">anytracker.stage</field>
    <field name="type">form</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <form string="Ticket stage">
        <field name="name" select="1"/>
        <field name="state"/>
        <field name="progress" string="Progress"/>
        <field name="method_id"/>
        <field name="force_rating"/>
        <field name="sequence"/>
        <field name="is_ratable" string="Rating validation"/>
        <field name="forbidden_complexity_ids"/>
    </form>
    </field>
</record>

<record id="stage_ticket_view_search" model="ir.ui.view">
    <field name="name">anytracker.ticket.search</field>
    <field name="model">anytracker.ticket</field>
    <field name="type">search</field>
    <field name="inherit_id" ref="anytracker.ticket_view_search"/>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='id']" position="after">
            <field name="stage_id" widget="selection"/>
        </xpath>
        <xpath expr="//filter[@name='filter_tasks']" position="after">
            <separator/>
            <filter name="filter_progress"
                    string="Progress &lt; 50"
                    domain="[('progress','&lt;',50.0)]"
                    icon="terp-personal"
                    help="Show tickets progress between 0 to 50"/>
        </xpath>

        <xpath expr="//search/group[1]" postion="inside">
                <filter name="tickets_by_stage"
                        string="Stage"
                        context="{'group_by': ['stage_id']}"
                        help="Group tickets by stage"/>
        </xpath>
    </field>
</record>

<!-- ADD A TAB IN TICKET FORM -->
<record id="view_ticket_form_with_progress" model="ir.ui.view">
    <field name="name">Ticket</field>
    <field name="model">anytracker.ticket</field>
    <field name="inherit_id" ref="ticket_view_form" />
    <field name="arch" type="xml">
      <xpath expr="/form/header" position='inside'>
        <field name="stage_id" widget="statusbar" clickable="True" attrs="{'invisible': [('child_ids', '!=', ())]}"/>
        <field name="is_ratable" attrs="{'invisible': True}"/>
      </xpath>
      <xpath expr="/form/sheet/group" position="before">
        <div class="oe_right oe_button_box" name="buttons">
            <button name="accept_rating"
                string="Accepter le chiffrage" type="object"
                icon="gtk-apply"
                attrs="{'invisible': [('is_ratable', '=', False)]}" groups="anytracker.group_customer"/>
             <button name="decline_rating"
                string="Refuser le chiffrage" type="object"
                icon="gtk-cancel"
                attrs="{'invisible': [('is_ratable', '=', False)]}" groups="anytracker.group_customer"/>
        </div>
      </xpath>
      <xpath expr="//notebook/page[@string='Participants']" position="after">
        <page string="Progress">
        <group col="9" colspan="2">
          <button name="stage_previous" string=""
                  type="object" icon="gtk-go-back" attrs="{'invisible': [('child_ids', '!=', False)]}" groups="anytracker.group_member"/>
          <button name="stage_next" string=""
            type="object" icon="gtk-go-forward" attrs="{'invisible': [('child_ids', '!=', False)]}" groups="anytracker.group_member"/>
          <field name="progress" string="Progress" widget="progressbar"/>
          <button name="recompute_progress" string="Recompute progress"
            type="object" icon="gtk-execute" attrs="{'invisible': [('child_ids', '=', False)]}" groups="anytracker.group_manager"/>
        </group>
        </page>
      </xpath>
    </field>
</record>

<record id="view_ticket_tree_with_progress" model="ir.ui.view">
    <field name="name">Ticket</field>
    <field name="model">anytracker.ticket</field>
    <field name="inherit_id" ref="ticket_view_tree" />
    <field name="arch" type="xml">
        <xpath expr="/tree/field[@name='shortened_description']" position="after">
            <field name="stage_id"/>
              <button name="stage_previous" string=""
                      type="object" icon="gtk-go-back" />
              <button name="stage_next" string=""
                type="object" icon="gtk-go-forward" />
            <field name="progress" string="Progress" widget="progressbar"/>
        </xpath>
    </field>
</record>

<record id="tickets_hierarchy_with_progress" model="ir.ui.view">
    <field name="name">anytracker.ticket.hierarchy</field>
    <field name="model">anytracker.ticket</field>
    <field name="inherit_id" ref="tickets_hierarchy" />
    <field name="arch" type="xml">
        <xpath expr="/tree/field[@name='nb_children']" position="after">
            <field name="progress" string="Progress" widget="progressbar"/>
        </xpath>
    </field>
</record>

<record id="ticket_stage_piechart" model="ir.ui.view">
  <field name="name">anytracker.ticket.stage_piechart</field>
  <field name="model">anytracker.ticket</field>
  <field name="arch" type="xml">
    <graph string="Stages" type="pie">
      <field name="stage_id"/>
      <!-- hack to get the count by summing on a constant field -->
      <field name="constant_one" operator="+"/>
    </graph>
  </field>
</record>


<!-- ACTIONS -->
<record model="ir.actions.act_window" id="act_open_stage_view">
    <field name="name">Stages</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">anytracker.stage</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="search_view_id" ref="view_stage_search"/>
    <field name="domain">[]</field>
    <field name="context">{'search_default_stages_by_method': 1}</field>
</record>

<record model="ir.actions.act_window.view" id="act_open_stage_view_form">
    <field name="act_window_id" ref="act_open_stage_view"/>
    <field name="sequence" eval="20"/>
    <field name="view_mode">form</field>
    <field name="view_id" ref="view_stage_form"/>
</record>

<record model="ir.actions.act_window.view" id="act_open_stage_view_tree">
    <field name="act_window_id" ref="act_open_stage_view"/>
    <field name="sequence" eval="10"/>
    <field name="view_mode">tree</field>
    <field name="view_id" ref="view_stage_tree"/>
</record>

<record model="ir.actions.act_window" id="act_all_tasks">
  <field name="view_mode">tree,form,graph</field>
</record>

<menuitem id="menu_stage"
    parent="menu_configuration"
    sequence="20"
    action="act_open_stage_view"/>

</data>
</openerp>

