<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

<!-- TICKET -->
<record id="assignment_ticket_view_search" model="ir.ui.view">
    <field name="name">anytracker.ticket.search</field>
    <field name="model">anytracker.ticket</field>
    <field name="type">search</field>
    <field name="inherit_id" ref="anytracker.ticket_view_search"/>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='id']" position="after">
            <field name="assigned_user_id" widget="selection"/>
        </xpath>
        <xpath expr="//filter[@name='filter_tasks']" position="after">
            <separator orientation="vertical"/>
            <filter name="filter_my_tasks"
                    string="My tickets"
                    domain="[('assigned_user_id','=',uid)]"
                    icon="terp-personal"
                    help="Show only tickets where I have an assignment"/>
        </xpath>
    </field>
</record>

<record id="assignment_ticket_view_tree" model="ir.ui.view">
    <field name="name">Tickets</field>
    <field name="model">anytracker.ticket</field>
    <field name="type">tree</field>
    <field name="priority" eval="16"/>
    <field name="inherit_id" ref="anytracker.ticket_view_tree"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='shortened_description']" position="after">
            <field name="assigned_user_id"/>
        </xpath>
    </field>
</record>

<record id="assignment_ticket_view_form" model="ir.ui.view">
    <field name="name">ticket.form</field>
    <field name="model">anytracker.ticket</field>
    <field name="type">form</field>
    <field name="inherit_id" ref="anytracker.ticket_view_form"/>
    <field name="priority" eval="16"/>
    <field name="arch" type="xml">
    <xpath expr="//notebook/page[@string='Participants']" position="after">
        <page string="Assignments" groups="anytracker.group_member">
            <group colspan="4" col="2">
            <field name="assigned_user_id"/>
            <!-- GR restored label on assignment m2m to get the
            tooltip help. Not pretty, but more usable (expliciteness
            of behaviour) -->
            <field name="assignment_ids" context="{'default_ticket_id': active_id, 'default_stage_id': stage_id}" colspan="2"/>
            </group>
        </page>
    </xpath>
    </field>
</record>

<!-- ASSIGNMENT -->
<record id="view_assignment_form" model="ir.ui.view">
    <field name="name">anytracker.assignment.form</field>
    <field name="model">anytracker.assignment</field>
    <field name="type">form</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <form string="Assignments">
        <group colspan="4" col="2">
            <field name="user_id"/>
            <field name="ticket_id" invisible="1"/>
            <field name="stage_id"/>
        </group>
    </form>
    </field>
</record>

<record id="view_assignment_tree" model="ir.ui.view">
    <field name="name">anytracker.assignment.tree</field>
    <field name="model">anytracker.assignment</field>
    <field name="type">tree</field>
    <field name="priority" eval="8"/>
    <field name="arch" type="xml">
    <tree string="">
        <field name="user_id"/>
        <field name="stage_id"/>
        <field name="date"/>
    </tree>
    </field>
</record>

<record id="view_assignment_kanban" model="ir.ui.view">
    <field name="name">anytracker.assignment.kanban</field>
    <field name="model">anytracker.ticket</field>
    <field name="type">kanban</field>
    <field name="priority" eval="8"/>
    <field name="inherit_id" ref="anytracker.tickets_view_kanban"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='name']" position="after">
        <field name="assigned_user_email"/>
        <field name="assigned_user_id"/>
      </xpath>
      <xpath expr="//h4" position="before">
        <img t-att-src="kanban_gravatar(record.assigned_user_email.value, 22)"
             class="oe_kanban_gravatar" t-att-title="record.assigned_user_id.value"/>
      </xpath>
        <xpath expr="//a[@string='Permalink']" position="before">
            <a type="action" name="%(action_assign_to_current_user)d"
               groups="anytracker.group_member" string="Assign to me">
                 <img width="16" height="16" src="/anytracker/static/src/img/cart_put.png"/></a>
        </xpath>
    </field>
</record>

<!-- MY ASSIGNED TICKETS -->
<record model="ir.actions.act_window" id="act_open_my_tickets_view">
    <field name="name">My tickets</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">anytracker.ticket</field>
    <field name="view_type">form</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{'search_default_filter_my_tasks': 1,'search_default_filter_progress':1}</field>
    <field name="domain">[]</field>
</record>
<menuitem id="menu_my_tickets"
    parent="menu_anytracker"
    sequence="-1"
    action="act_open_my_tickets_view"/>

</data>
</openerp>
