<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_import_freemind_form" model="ir.ui.view">
            <field name="name">import freemind wizard form</field>
            <field name="model">import.freemind.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
            <form string="Import freemind data">
                <field name="filename" select="1"/>
                <separator string="" colspan="4" />
                <group colspan="4" col="6">
                    <label string ="" colspan="2"/>
                    <button icon="gtk-cancel" special="cancel" string="Cancel"/>
                    <button icon="terp-gtk-go-back-rtl" string="Import file" name="execute_import" type="object"/>
                </group>
            </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_import_freemind_view">
            <field name="name">Import freemind data</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.freemind.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_import_freemind_wizard"
            parent="ticket_menu"
            sequence="20"
            action="action_import_freemind_view"/>
    </data>
</openerp>
